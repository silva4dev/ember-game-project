{{page-title 'Home'}}

<div class='container mt-4'>

  <LinkTo class='btn btn-success' @route='register-game'>Cadastrar um game</LinkTo>

  <hr />

  {{#each @model as |game|}}
    <div class='card mb-3'>
      <div class='card-body p-4 d-inline'>
        <h4>{{game.name}}</h4>
        <hr />
        <p class='lead text-justify'>{{game.description}}</p>
        <hr />
        <LinkTo
          type='button'
          class='btn btn-warning'
          @route='edit-game'
          @model={{game.id}}
        >
          <i class='p-1 fas fa-edit'></i>Editar</LinkTo>
        <button
          type='button'
          class='btn btn-danger'
          {{action 'deleteGame' game.id}}
        ><i class='p-1 fas fa-trash'></i>Deletar</button>
      </div>
    </div>
  {{/each}}
</div>

{{outlet}}